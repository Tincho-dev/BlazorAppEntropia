@using System.Globalization
@using Models;

<div class="container">
    <div class="row">
        <div class="col-sm-12 my-5">
            <RadzenCard class="w-100 mb-4" >
                <RadzenCheckBox @bind-Value="@showDataLabels" Name="dataLabels"></RadzenCheckBox>
                <RadzenLabel Text="Show Data Labels" For="dataLabels" Style="margin-left: 8px; vertical-align: middle;" />
            </RadzenCard>
            <h4>Auto-size column series</h4>
            <RadzenChart>
                <RadzenColumnSeries Data="@Letras" CategoryProperty="Name" Title="" LineType="LineType.Dashed" ValueProperty="FrecuenciaDeAparicion">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenColumnSeries>

                <RadzenColumnOptions Radius="5" />
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Frecuencia" />
                </RadzenValueAxis>
            </RadzenChart>
